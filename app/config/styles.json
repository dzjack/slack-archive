{
  "conversation": {
    "hash": {
      "opacity": "0.5",
      "padding-right": ".2ex"
    },
    "mpdm-count": {
        "opacity": "0.3",
        "color": "#fff",
        "background": "#000",
        "border-radius": "4px",
        "width": "2.5ex",
        "height": "2.5ex",
        "line-height": "2.5ex",
        "display": "inline-block",
        "text-align": "center",
        "font-size": "80%",
        "margin-right": ".4ex"
    },
    "user-image": {
      "vertical-align": "text-bottom",
      "padding-right": ".2ex"
    }
  },
  "message-group": {
    "margin": "4px 0",
    "author-image": {
      "float": "left",
      "padding-right": "10px"
    },
    "body": {
      "overflow": "hidden",
      "line-height": "18px"
    },
    "timestamp": {
      "color": "#9e9ea6",
      "font-size": "9pt"
    }
  },
  "message": {
    "margin": "2px 0",
    "blockquote": {
      "border-left": "solid 4px #ddd",
      "padding-left": "1ex",
      "margin": "0"
    }
  }
}
